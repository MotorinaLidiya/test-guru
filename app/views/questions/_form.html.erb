<%= form_with model: [@test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.label :body, 'Вопрос:' %>
    <%= form.text_field :body, id: 'question-body' %>
  </p>

  <div>
    <%= form.submit 'Сохранить' %>
  </div>
<% end %>

<p><%= button_to 'Назад', test_path(@question.test), method: :get %></p>
