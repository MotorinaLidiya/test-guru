<tr>
  <td><%= test.title %></td>
  <td><%= test_level(test) %></td>
  <td><%= test.questions.length %></td>
  <td><%= test.author.name %></td>
  <td><%= link_to 'Открыть', test_path(test) %></td>
  <td><%= link_to 'Изменить', edit_test_path(test) %></td>
  <td>
    <%= button_to 'Удалить',
                test_path(test),
                method: :delete %>
  </td>
  <td><%= button_to 'Пройти тест', start_test_path(test) if test.questions.any? %></td>
</tr>
