<tr>
  <td class="center-text"><%= test.title %></td>
  <td class="center-text"><%= test.category.title %></td>
  <td class="center-text"><%= test_level(test) %></td>
  <td class="center-text"><%= test.questions.length %></td>
  <td class="center-text"><%= test.author.first_name %> <%= test.author.last_name %></td>
  <td class="center-text">
    <% if test.questions.any? %>
      <% if test.duration.present? %>
        <%= button_to t('helpers.button.start_test'),
                      start_test_path(test),
                      class: "btn btn-outline-secondary",
                      data: { confirm: "Тест ограничен по времени: #{test.duration}. Готовы пройти тест?" } %>
      <% else %>
        <%= button_to t('helpers.button.start_test'),
                      start_test_path(test),
                      class: "btn btn-outline-secondary" %>
      <% end %>
    <% end %>
  </td>
</tr>
