<tr>
  <td><%= test.title %></td>
  <td><%= test_level(test) %></td>
  <td><%= test.questions.count %></td>
  <td><%= User.find(test.author_id).name %></td>
  <td><%= link_to 'Открыть', test_path(test) %></td>
  <td><%= link_to 'Изменить', edit_test_path(test) %></td>
  <td>
    <%= link_to 'Удалить',
                test_path(test),
                method: :delete,
                data: { confirm: 'Вы уверены?'} %>
  </td>
</tr>
