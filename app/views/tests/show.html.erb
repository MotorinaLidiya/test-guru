<h1>Вопросы теста: <%= @test.title %></h1>

<ul>
  <%= render @questions %>
</ul>

<div class="padding-10"><%= button_to 'Изменить тест', edit_test_path, method: :get %></div>
<div class="padding-10"><%= button_to 'Удалить тест', @test, method: :delete, data: { confirm: 'Вы уверены?' } %></div>
<div class="padding-10"><%= button_to 'Добавить вопрос', new_test_question_path(@test), method: :get %></div>
<div class="padding-10"><%= button_to 'Назад', tests_path, method: :get %></div>
