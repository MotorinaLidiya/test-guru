<% if @tests.present? %>
  <h1 class="center-text">Все тесты </h1>

  <table class="styled-table">
    <thead>
    <tr>
      <th>Название</th>
      <th>Уровень</th>
      <th>Количество вопросов</th>
      <th>Автор</th>
      <th colspan="4">Actions</th>
    </tr>
    </thead>
    <tbody>
    <%= render @tests %>
    </tbody>
  </table>

<% else %>
  <p>Тестов нет.</p>
<% end %>

<p>
  <%= button_to 'Добавить тест', new_test_path, method: :get %>
</p>
