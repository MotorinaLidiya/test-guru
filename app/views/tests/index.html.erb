<h1 class="center-text"><%= t('.header') %></h1>

<% if @tests.present? %>

  <table class="styled-table">
    <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.questions_quantity') %></th>
      <th><%= t('.author') %></th>
      <th><%= t('.passage') %></th>
    </tr>
    </thead>
    <tbody>
    <%= render @tests %>
    </tbody>
  </table>

<% else %>
  <p><%= t('.empty') %></p>
<% end %>
