<div class="text-center mt-5">
  <h2><%= t('.header', title: @test_passage.test.title) %></h2>

  <h3>
    <%= t('test_passages.result.message') %>
    <span class="<%= @test_passage.result_successful? ? 'text-success' : 'text-danger' %>">
      <%= @test_passage.result_message %>
    </span>
  </h3><br>

  <div class="mt-4">
    <%= button_to t('helpers.button.back_to_tests'), tests_path, method: :get, class: 'btn btn-secondary' %>
  </div>

  <div class="mt-4">
    <%= button_to t('helpers.button.feedback'), new_test_passage_feedback_path(@test_passage), method: :get, class: 'btn btn-outline-secondary' %>
  </div>
</div>
