<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div, class: 'alert alert-danger resource-errors', data: { resource_id: resource.id } do %>
    <strong><%= t('.header', count: resource.errors.count) %></strong>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
