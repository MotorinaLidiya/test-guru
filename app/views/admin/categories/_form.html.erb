<%= form_with model: [:admin, @category], local: true do |form| %>
  <%= render 'shared/errors', resource: @category %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :category_title, rows: 1, cols: 30 %>
  </p>

  <div class="mt-4">
    <%= form.submit t('helpers.submit.categories.save'), class: "btn custom-button" %>
  </div>
<% end %>

<p>
  <%= button_to t('helpers.button.back'), admin_categories_path, method: :get, class: "btn btn-outline-primary text-custom" %>
</p>
