<div class="mt-4">
  <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
    <%= render 'shared/errors', resource: @answer %>

    <p>
      <%= form.label :body %>
      <%= form.text_area :body, id: :answer_body, rows: 1, cols: 40 %>
    </p>

    <p>
      <%= form.label :correct %>
      <%= form.check_box :correct, id: :answer_correct %>
    </p>

    <p><%= form.submit t('helpers.submit.answers.save'), class: "btn custom-button" %></p>
  <% end %>
</div>
