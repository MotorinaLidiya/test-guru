<div>
  <h2 class="text-center mb-5"><%= t('.header') %></h2>
  <p>
    <%= button_to 'Добавить Бэйдж', new_admin_badge_path, method: :get, class: "btn custom-button" %>
  </p>

  <div class="row">
    <% @badges.each do |badge| %>
      <div class="col-md-6 mb-5">
        <ul>
          <li>
            <b><%= badge.title %></b>
            <p>
              <%= badge.description %><br>
              <%= link_to image_tag(badge.image_url, size: "150x150") %>
              <div class="d-flex gap-4 mt-2 mb-2">
                <%= button_to 'Редактировать',
                              edit_admin_badge_path(badge),
                              method: :get,
                              class: 'btn btn-outline-primary text-custom btn-sm' %>
                <%= button_to 'Удалить', admin_badge_path(badge),
                              method: :delete,
                              data: { confirm: 'Вы уверены, что хотите удалить эту категорию?' },
                              class: 'btn btn-danger btn-sm' %>
              </div>
            </p>
          </li>
        </ul>
      </div>
    <% end %>
  </div>

  <p>
    <%= button_to t('helpers.button.back'), admin_tests_path, method: :get, class: "btn btn-outline-primary text-custom" %>
  </p>
</div>
