<% if @tests.present? %>
  <h1 class="center-text">Все тесты </h1>

  <p>
    <%= button_to 'Добавить тест', new_admin_test_path, method: :get %>
  </p>

  <table class="styled-table">
    <thead>
    <tr>
      <th>Название</th>
      <th>Уровень</th>
      <th>Количество вопросов</th>
      <th>Автор</th>
      <th colspan="4">Actions</th>
    </tr>
    </thead>
    <tbody>
    <%= render @tests %>
    </tbody>
  </table>

<% else %>
  <p>Тестов нет.</p>
<% end %>
