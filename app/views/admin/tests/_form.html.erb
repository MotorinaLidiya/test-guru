<div class="row mt-3">
  <div class="col col-md-6">
    <%= form_with model: [:admin, @test], local: true, class: "form-group" do |form| %>
      <%= render 'shared/errors', resource: @test %>

      <div class="mb-3">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, id: :test_title, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :level, class: 'form-label' %>
        <%= form.number_field :level, id: :test_level, class: 'form-control', min: 0, step: 1 %>
      </div>

      <div class="mb-3">
        <%= form.label :category_id, class: 'form-label' %>
        <%= form.collection_select :category_id, Category.all, :id, :title, prompt: t('helpers.select.prompt'), class: 'form-select' %>
      </div>

      <div class="mb-3">
        <%= form.label :duration, class: 'form-label' %>
        <%= form.text_field :duration, id: :test_duration, class: 'form-control', placeholder: '00:00'%>
        <small class="form-text text-muted">Формат времени: 00:00 (например, 59:59, 1:30)</small>
      </div>

      <div class="mb-3">
        <%= form.submit t('helpers.submit.tests.create'), class: "btn btn-outline-primary text-custom" if @test.new_record? %>
        <%= form.submit t('helpers.submit.tests.update'), class: "btn btn-outline-primary text-custom" unless @test.new_record? %>
      </div>
    <% end %>

    <p>
      <%= button_to t('helpers.button.back'), admin_tests_path, method: :get, class: "btn btn-outline-primary text-custom" %>
    </p>
  </div>
</div>
