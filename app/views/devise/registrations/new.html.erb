<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2>Became a Guru</h2>
    <%= render "shared/errors", resource: resource %>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <p>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </p>

            <p>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </p>

            <p>
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Enter email'  %>
            </p>

            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'password' %>
            </p>

            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'password_confirmation' %>
              <div id="password-error" class="text-danger"></div>
            </p>
          </div>

          <%= f.submit "Sign Up", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
    <div class="mt-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
